{
    "id": "0cf723f8-9caf-4808-8760-d38063ed0c02",
    "name": "AdvancedSmoke",
    "friendlyName": "Advanced Smoke Test",
    "description": "Web smoke tests with header support and retry.",
    "category": "Utility",
    "author": "Arne Petersen",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "instanceNameFormat": "Advanced Smoke Test",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "inputType",
            "type": "radio",
            "label": "Input Type",
            "required": false,
            "defaultValue": "single",
            "helpMarkDown": "Define a single URL or a list of URLs.",
            "options": {
                "single": "Single",
                "list": "List"
            }
        },
        {
            "name": "url",
            "type": "string",
            "label": "URL",
            "visibleRule": "inputType == single",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The URL including the protocol."
        },
        {
            "name": "urls",
            "type": "multiLine",
            "label": "List of URLs",
            "visibleRule": "inputType == list",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The URLs including the protocol, one per line."
        },
        {
            "name": "status",
            "type": "number",
            "label": "Expected HTTP status code",
            "defaultValue": "200",
            "required": true,
            "helpMarkDown": "HTTP status code to validate against.",
            "groupName": "advanced"
        },
        {
            "name": "method",
            "type": "pickList",
            "label": "HTTP method",
            "defaultValue": "GET",
            "required": true,
            "helpMarkDown": "HTTP method for the request.",
            "groupName": "advanced",
            "options": {
                "GET": "HTTP GET",
                "POST": "HTTP POST",
                "PUT": "HTTP PUT",
                "DELETE": "HTTP DELETE",
                "OPTIONS": "HTTP OPTIONS",
                "PATCH": "HTTP PATCH"
            }
        },
        {
            "name": "timeout",
            "type": "number",
            "label": "Timeout",
            "required": false,
            "helpMarkDown": "Number of milliseconds to wait for a server to send response.",
            "groupName": "advanced"
        },
        {
            "name": "headers",
            "type": "multiLine",
            "label": "Headers",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "One per line, format NAME=value.",
            "groupName": "advanced"
        },
        {
            "name": "retryCount",
            "type": "number",
            "label": "Retries",
            "required": true,
            "defaultValue": "0",
            "helpMarkDown": "Number of retries in case of failed tests.",
            "groupName": "advanced"
        },
        {
            "name": "retryDelay",
            "type": "number",
            "label": "Retry delay",
            "required": true,
            "defaultValue": "500",
            "helpMarkDown": "Delay (in milliseconds) between retries.",
            "groupName": "advanced"
        }
    ],
    "execution": {
        "Node": {
            "target": "dist/task.js"
        }
    }
}